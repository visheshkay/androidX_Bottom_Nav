<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/image_project_card"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/title_project_card"
        android:layout_width="271dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10px"
        tools:text="Title" />

    <TextView
        android:id="@+id/desc_project_card"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_project_card"
        tools:text="This is a breif description about the project which is to be placed" />

    <TextView
        android:id="@+id/link_project_card"
        android:layout_width="270dp"
        android:layout_height="26dp"
        android:autoLink="web"
        android:textColorLink="#00178D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_project_card"
        tools:text="https://github.com" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="133dp" />

</androidx.constraintlayout.widget.ConstraintLayout>